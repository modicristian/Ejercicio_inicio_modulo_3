<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".interfaz.MainActivity"
    android:layout_margin="25dp">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="INGRESE VALOR"
        android:layout_centerHorizontal="true"
        android:id="@+id/txtprimervalor"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="INGRESE VALOR"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txtprimervalor"
        android:id="@+id/txtsegundovalor"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SUMA"
            android:id="@+id/txtsuma"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RESTA"
            android:id="@+id/txtresta"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DIVISION"
            android:id="@+id/txtdivision"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MULTIPLICACION"
            android:id="@+id/txtmultiplicacion"/>

    </LinearLayout>

</RelativeLayout>